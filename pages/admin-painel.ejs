<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Painel do Admin</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .header-painel {
        width: 100%;
        padding: 10px;
        background-color: #00a1ff;
        color: white;
      }
      form {
        padding: 10px;
        margin: 20px 0;
      }
      form input {
        width: 100%;
        height: 40px;
        border: 1px solid #ccc;
        margin-bottom: 20px;
        padding-left: 10px;
      }
      form textarea {
        width: 100%;
        height: 120px;
        border: 1px solid #ccc;
        padding: 10px;
      }
      form input[type='submit'] {
        width: 100%;
        height: 40px;
        background-color: #00a1ff;
        border: 0;
        cursor: pointer;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="header-painel">
      <h2>Cadastro Noticia</h2>
    </div>
    <form enctype="multipart/form-data" action="/admin/cadastro" method="post">
      <input
        type="text"
        name="titulo_noticia"
        placeholder="Titulo da noticia"
      />
      <input
        type="text"
        name="url_imagem"
        placeholder="Link da imagem da noticia"
      />
      <input type="text" name="slug" placeholder="Slug" />
      <input type="file" name="arquivo" />
      <textarea name="noticia" placeholder="Noticia..."></textarea>
      <input type="submit" name="acao" value="Cadastrar!" />
    </form>
    <br />
    <div class="header-painel">
      <h2>Listando Noticia!</h2>
    </div>

    <%for (let i = 0; i < posts.length; i++){ %>
    <div class="box-ultima-single">
      <div
        style="
          margin-top: 20px;
          border-bottom: 2px dashed #ccc;
          padding: 10px;
          display: flex;
          justify-content: space-between;
        "
        class="noticia-single"
      >
        <p>titulo noticia: <%= posts[i].titulo %></p>
        <a href="/admin/deletar/<%= posts[i].id %>">(X)</a>
      </div>
    </div>
    <% } %>
  </body>
</html>
